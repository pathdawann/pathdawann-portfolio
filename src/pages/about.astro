        border: 4px solid #1e293b; /* Borde oscuro */
        box-shadow: 20px 20px 0px #3b82f6; /* Efecto de sombra s칩lida moderna */
        transition: transform 0.3s ease;
    }

    .hero-image img:hover {
        transform: translate(5px, 5px);
        box-shadow: 15px 15px 0px #2563eb;
    }

    /* STORY SECTION */
    .story-section h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #fff;
        border-bottom: 2px solid #1e293b;
        padding-bottom: 1rem;
        display: inline-block;

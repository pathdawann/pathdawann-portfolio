---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* LAYOUT PRINCIPAL */
			main {
				width: 100%;
				max-width: 1200px; /* Igual que el resto de la web */
				margin: 0 auto;
				padding: 3rem 1.5rem;
				box-sizing: border-box;
			}

			/* GRID DE ARTÍCULOS */
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); /* Grid moderno automático */
				gap: 3rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}

			li {
				transition: transform 0.2s ease;
			}

			/* EL PRIMER ARTÍCULO DESTACADO (Hero Post) */
			li:first-child {
				grid-column: 1 / -1; /* Ocupa todo el ancho */
				margin-bottom: 2rem;
				text-align: center;
			}

			li:first-child img {
				width: 100%;
				max-height: 500px; /* Evita que sea demasiado alta */
				object-fit: cover;
			}

			li:first-child .title {
				font-size: 2.5rem;
				margin-top: 1.5rem;
			}

			/* ESTILOS DE IMAGEN */
			li img {
				margin-bottom: 1rem;
				border-radius: 16px;
				width: 100%;
				aspect-ratio: 16/9; /* Mantiene proporción rectangular */
				object-fit: cover;
				transition: box-shadow 0.3s ease, transform 0.3s ease;
				border: 1px solid var(--border); /* Borde sutil */
			}

			/* ENLACES */
			li a {
				display: block;
				text-decoration: none;
			}

			/* TEXTOS */
			.title {
				margin: 0 0 0.5rem 0;
				color: var(--text-main); /* Variable correcta */
				line-height: 1.2;
				font-size: 1.5rem;
				font-weight: 700;
				transition: color 0.2s ease;
			}

			.date {
				margin: 0;
				color: var(--text-muted); /* Variable correcta */
				font-size: 0.95rem;
			}

			/* EFECTOS HOVER */
			li a:hover .title {
				color: var(--accent); /* Azul al pasar el mouse */
			}

			li a:hover img {
				box-shadow: 0 10px 20px rgba(0,0,0,0.15); /* Sombra suave */
				transform: translateY(-5px); /* Pequeño salto */
			}

			/* RESPONSIVE */
			@media (max-width: 720px) {
				ul {
					grid-template-columns: 1fr; /* Una sola columna en móvil */
					gap: 2rem;
				}
				
				li:first-child {
					margin-bottom: 1rem;
				}
				
				li:first-child .title {
					font-size: 1.8rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{/* Usamos quality={'mid'} para optimizar carga */}
									<Image width={720} height={360} src={post.data.heroImage || '/blog-placeholder-1.jpg'} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
    }

    /* --- HERO SECTION --- */
    .hero-section {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 4rem;
        align-items: center;
        margin-bottom: 5rem;
    }

    .hero-text h1 {

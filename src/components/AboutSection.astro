        max-width: 350px;
        aspect-ratio: 1/1;
        object-fit: cover;
        border-radius: 20px;
        border: 4px solid var(--surface); 
        box-shadow: 15px 15px 0px var(--accent-glow);
        transition: transform 0.3s ease;
    }

    .hero-image img:hover {
        transform: translate(5px, 5px);
    }

    /* --- STORY SECTION --- */
    .story-header h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: var(--text-main);
        border-bottom: 2px solid var(--border);
        padding-bottom: 0.5rem;
        display: inline-block;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 4rem;
        align-items: start; /* Alineamos al inicio para que no se estire */
    }

    /* --- TARJETA DE SKILLS (REDISE칌ADA) --- */
    .skills-card {
        background: var(--surface);
        padding: 2rem;
        border-radius: 16px;
        /* Borde m치s notorio usando el color de acento pero suave */
        border: 2px solid var(--border); 

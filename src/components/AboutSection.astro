    }

    .skills-card h3 {
        margin-top: 0;
        margin-bottom: 1.5rem;
        font-size: 1.3rem;
        font-weight: 800;
        color: var(--text-main);
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
    }

    .skill {
        /* CAMBIO: Fondo de color Acento (Azul) y texto Blanco */
        background-color: var(--accent); 
        color: white;
        
        padding: 0.6rem 1.2rem;
        border-radius: 8px; /* Un poco menos redondo, m치s 'tech' */
        font-size: 0.95rem;
        font-weight: 600;
        transition: transform 0.2s, background-color 0.2s;
    }
    
    .skill:hover {
        transform: translateY(-2px);
        background-color: var(--accent-dark);
    }

    /* --- RESPONSIVE --- */
    @media (max-width: 768px) {
        .hero-section {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }

        .hero-image {

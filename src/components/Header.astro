---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
    <div class="header-container">
        <h2><a href="/">{SITE_TITLE}</a></h2>

        <button id="menu-toggle" class="menu-btn" aria-label="Abrir menú">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 6h16M4 12h16M4 18h16" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        
        <nav id="nav-menu" class="nav-links">
            <HeaderLink href="/">Inicio</HeaderLink>
            <a href="/#sobre-mi">Sobre mí</a>
            <a href="/#servicios">Servicios</a>
            <HeaderLink href="/portfolio">Portafolio</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            
            <div class="toggle-wrapper">
                <ThemeToggle />
            </div>
        </nav>
    </div>
</header>

<style>
    /* 1. CONTENEDOR PRINCIPAL */
    header {
        margin: 0;
        padding: 0 1.5rem;
        background-color: var(--background); 
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        position: sticky;
        top: 0;
        z-index: 100;
        /* Efecto moderno de cristal */
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .header-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
        height: 70px;
    }

    /* 2. ESTILOS DEL LOGO */
    h2 {
        margin: 0;
        font-size: 1.3rem;
        font-weight: 800;
        z-index: 101;
    }
    h2 a {
        text-decoration: none;
        color: var(--text-main);
        transition: color 0.2s;
    }
    h2 a:hover {
        color: var(--accent);
    }

    /* 3. ESTILOS DE ESCRITORIO */
    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    /* ESTILOS DE LOS ENLACES (Aquí es donde recuperamos los efectos) */
    .nav-links :global(a) {
        text-decoration: none;
        color: var(--text-main);
        font-weight: 600;
        font-size: 0.95rem;
        transition: color 0.2s ease;
        position: relative;
    }
    
    .nav-links :global(a:hover),
    .nav-links :global(a.active) {
        color: var(--accent);
    }

    /* Línea animada al hacer hover */
    .nav-links :global(a)::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -4px;
        left: 0;
        background-color: var(--accent);
        transition: width 0.3s ease;
    }

    .nav-links :global(a:hover)::after,
    .nav-links :global(a.active)::after {
        width: 100%;
    }

    /* Botón Móvil */
    .menu-btn {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-main);
        padding: 0;
        z-index: 101;
    }

    .toggle-wrapper {
        display: flex;
        align-items: center;
        margin-left: 0.5rem;
        padding-left: 1.5rem;
        border-left: 1px solid var(--border);
        height: 24px;
    }

    /* 4. ESTILOS MÓVIL */
    @media (max-width: 768px) {
        .menu-btn { display: block; }

        .nav-links {
            display: none;
            position: absolute;
            top: 70px;
            left: 0;
            width: 100%;
            background-color: var(--background);
            flex-direction: column;
            padding: 2rem 0;
            border-bottom: 1px solid var(--border);
            box-shadow: 0 10px 15px rgba(0,0,0,0.1);
        }

        .nav-links.expanded { display: flex; }

        .nav-links :global(a) {
            padding: 1rem 0;
            font-size: 1.2rem;
            width: 100%;
            text-align: center;
        }
        
        .nav-links :global(a)::after { display: none; }

        .toggle-wrapper {
            margin: 1.5rem 0 0 0;
            border: none;
            padding: 0;
            width: 100%;
            justify-content: center;
        }
    }
</style>

<script>
    const menuBtn = document.getElementById('menu-toggle');
    const navLinks = document.getElementById('nav-menu');

    if (menuBtn && navLinks) {
        menuBtn.addEventListener('click', () => {
            const isExpanded = navLinks.classList.contains('expanded');
            navLinks.classList.toggle('expanded');
            menuBtn.setAttribute('aria-expanded', (!isExpanded).toString());
        });

        navLinks.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('expanded');
                menuBtn.setAttribute('aria-expanded', 'false');
            });
        });
    }
</script>
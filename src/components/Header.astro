---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
    <div class="header-container">
        <h2><a href="/">{SITE_TITLE}</a></h2>

        <button id="menu-toggle" class="menu-btn" aria-label="Abrir menú">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 6h16M4 12h16M4 18h16" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        
        <nav id="nav-menu" class="nav-links">
            <HeaderLink href="/">Inicio</HeaderLink>
            <a href="/#sobre-mi">Sobre mí</a>
            <a href="/#servicios">Servicios</a>
            <HeaderLink href="/portfolio">Portafolio</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            
            <div class="toggle-wrapper">
                <ThemeToggle />
            </div>
        </nav>
    </div>
</header>

<style>
    /* 1. CONTENEDOR PRINCIPAL */
    header {
        margin: 0;
        padding: 0 1.5rem;
        background-color: var(--background);
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        position: sticky; /* Opcional: Para que se quede fijo al bajar */
        top: 0;
        z-index: 100;
    }

    .header-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
        height: 70px;
    }

    /* 2. ESTILOS DEL LOGO */
    h2 {
        margin: 0;
        font-size: 1.2rem;
        font-weight: 800;
        z-index: 20; /* Para que quede sobre el menú móvil si se abre */
    }
    h2 a {
        text-decoration: none;
        color: var(--text-main);
    }

    /* 3. ESTILOS DE ESCRITORIO (POR DEFECTO) */
    .nav-links {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    /* Usamos :global para asegurar que estilice los componentes HeaderLink */
    .nav-links :global(a) {
        text-decoration: none;
        color: var(--text-main);
        font-weight: 700;
        font-size: 0.95rem;
        transition: color 0.2s;
    }
    
    .nav-links :global(a:hover),
    .nav-links :global(a.active) {
        color: var(--accent);
    }

    /* El botón hamburguesa se OCULTA en escritorio */
    .menu-btn {
        display: none; 
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-main);
    }

    .toggle-wrapper {
        display: flex;
        align-items: center;
        margin-left: 0.5rem;
        padding-left: 1rem;
        border-left: 1px solid var(--border);
    }

    /* 4. ESTILOS MÓVIL (MAX-WIDTH 768px) */
    @media (max-width: 768px) {
        .menu-btn {
            display: block; /* Mostrar botón en móvil */
        }

        .nav-links {
            display: none; /* Ocultar menú por defecto */
            position: absolute;
            top: 70px;
            left: 0;
            width: 100%;
            background-color: var(--background);
            flex-direction: column;
            padding: 1.5rem 0;
            border-bottom: 1px solid var(--border);
            box-shadow: 0 10px 15px rgba(0,0,0,0.1);
        }

        /* Clase para mostrar el menú cuando se activa con JS */
        .nav-links.expanded {
            display: flex;
        }

        .nav-links :global(a) {
            padding: 0.8rem 0;
            font-size: 1.1rem;
            width: 100%;
            text-align: center;
        }

        .toggle-wrapper {
            margin: 1rem 0 0 0;
            border: none;
            padding: 0;
        }
    }
</style>

<script>
    // Script simple para abrir/cerrar menú
    const menuBtn = document.getElementById('menu-toggle');
    const navLinks = document.getElementById('nav-menu');

    if (menuBtn && navLinks) {
        menuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('expanded');
        });

        // Cerrar al hacer click en un enlace
        navLinks.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('expanded');
            });
        });
    }
</script>